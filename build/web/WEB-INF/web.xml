<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>NewContact</servlet-name>
        <servlet-class>contact.action.NewContact</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewContact</servlet-name>
        <url-pattern>/contacts/new</url-pattern>
    </servlet-mapping>

     <servlet>
        <servlet-name>EditContact</servlet-name>
        <servlet-class>contact.action.EditContact</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditContact</servlet-name>
        <url-pattern>/contacts/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ContactList</servlet-name>
        <servlet-class>contact.action.ListContact</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ContactList</servlet-name>
        <url-pattern>/contacts/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ContactUpdate</servlet-name>
        <servlet-class>contact.action.UpdateContact</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ContactUpdate</servlet-name>
        <url-pattern>/contacts/update</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ContactDelete</servlet-name>
        <servlet-class>contact.action.DeleteContact</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ContactDelete</servlet-name>
        <url-pattern>/contacts/delete</url-pattern>
    </servlet-mapping>
</web-app>
